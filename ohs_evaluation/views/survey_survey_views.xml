<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="survey_survey_view_form_inherit_template" model="ir.ui.view">
            <field name="name">survey.survey.view.form.inherit</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_survey_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="state" widget="statusbar" class="o_field_statusbar" statusbar_visible="request,approved,not_applicable"/>
                </xpath>
                <xpath expr="//sheet//group" position="inside">
                    <group>
                        <field name="number" />
                        <field name="effective_date" />
                        <field name="revision" />
                    </group>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
