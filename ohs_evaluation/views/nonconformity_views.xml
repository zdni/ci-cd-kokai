<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="nonconformity_report_view_form" model="ir.ui.view">
            <field name="name">nonconformity.report.view.form</field>
            <field name="model">nonconformity.report</field>
            <field name="arch" type="xml">
                <form string="Nonconformity Report">
                    <header>
                        <field name="state" widget="statusbar" class="o_field_statusbar" statusbar_visible="new,process,approved,refused"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="line_id" />
                                <field name="inspector_id" />
                                <field name="pic_id" />
                            </group>
                            <group>
                                <field name="date_of_issue" />
                                <field name="source" />
                            </group>
                        </group>
                        <group>
                            <field name="description" />
                            <field name="completion_date" />
                        </group>
                        <notebook>
                            <page name="suggestions" string="Suggestions">
                                <field name="suggestion_line_ids">
                                    <tree editable='bottom'>
                                        <field name="nonconformity_id" invisible="1" />
                                        <field name="suggestion" />
                                    </tree>
                                </field>
                            </page>
                            <page name="root_cause" string="Root Cause">
                                <field name="root_cause_ids">
                                    <tree editable='bottom'>
                                        <field name="nonconformity_id" invisible="1" />
                                        <field name="root_cause" />
                                    </tree>
                                </field>
                            </page>
                            <page name="correction_action" string="Root Cause">
                                <field name="correction_action_ids">
                                    <tree editable='bottom'>
                                        <field name="nonconformity_id" invisible="1" />
                                        <field name="corrective" />
                                        <field name="pic_id" />
                                        <field name="due_date" />
                                        <field name="completion_date" />
                                    </tree>
                                </field>
                            </page>
                            <page name="preventive_measure" string="Preventive Measure">
                                <field name="preventive_measure_ids">
                                    <tree editable='bottom'>
                                        <field name="nonconformity_id" invisible="1" />
                                        <field name="prevention" />
                                        <field name="pic_id" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="nonconformity_report_view_tree" model="ir.ui.view">
            <field name="name">nonconformity.report.view.tree</field>
            <field name="model">nonconformity.report</field>
            <field name="arch" type="xml">
                <tree string="Nonconformity Report">
                    <field name="code" />
                    <field name="inspector_id" />
                    <field name="pic_id" />
                    <field name="date_of_issue" />
                    <field name="source" />
                    <field name="state" />
                </tree>
            </field>
        </record>
    
        <record id="nonconformity_report_action" model="ir.actions.act_window">
            <field name="name">Nonconformity Report</field>
            <field name="res_model">nonconformity.report</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="nonconformity_report_menu"
            name="Nonconformity Report"
            action="nonconformity_report_action"
            parent="ohs_evaluation.ohs_evaluation_root_menu"
            sequence="10"
        />

        <record id="suggestion_nonconformity_view_form" model="ir.ui.view">
            <field name="name">suggestion.nonconformity.view.form</field>
            <field name="model">suggestion.nonconformity</field>
            <field name="arch" type="xml">
                <form string="Suggestion">
                    <sheet>
                        <group>
                            <field name="nonconformity_id" invisible="1" />
                            <field name="suggestion" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="root_cause_nonconformity_view_form" model="ir.ui.view">
            <field name="name">root_cause.nonconformity.view.form</field>
            <field name="model">root_cause.nonconformity</field>
            <field name="arch" type="xml">
                <form string="Root Cause">
                    <sheet>
                        <group>
                            <field name="nonconformity_id" invisible="1" />
                            <field name="root_cause" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="corrective_action_view_form" model="ir.ui.view">
            <field name="name">corrective.action.view.form</field>
            <field name="model">corrective.action</field>
            <field name="arch" type="xml">
                <form string="Corrective Action">
                    <sheet>
                        <group>
                            <field name="nonconformity_id" invisible="1" />
                            <field name="corrective" />
                            <field name="pic_id" />
                            <field name="due_date" />
                            <field name="completion_date" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="preventive_measure_view_form" model="ir.ui.view">
            <field name="name">preventive.measure.view.form</field>
            <field name="model">preventive.measure</field>
            <field name="arch" type="xml">
                <form string="Preventive Measure">
                    <sheet>
                        <group>
                            <field name="nonconformity_id" invisible="1" />
                            <field name="prevention" />
                            <field name="pic_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
    </data>

</odoo>
