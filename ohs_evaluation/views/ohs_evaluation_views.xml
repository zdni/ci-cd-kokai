<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="ohs_evaluation_view_form" model="ir.ui.view">
            <field name="name">ohs.evaluation.view.form</field>
            <field name="model">ohs.evaluation</field>
            <field name="arch" type="xml">
                <form string="OHS Evaluation">
                    <header>
                        <field name="state" widget="statusbar" class="o_field_statusbar" statusbar_visible="new,process,done,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" />
                                <field name="date" />
                                <field name="job_id" />
                                <field name="department_id" />
                            </group>
                            <group>
                                <field name="template_id" />
                                <field name="user_ids" widget="many2many_tags" />
                                <field name="date" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ohs_evaluation_view_tree" model="ir.ui.view">
            <field name="name">ohs.evaluation.view.tree</field>
            <field name="model">ohs.evaluation</field>
            <field name="arch" type="xml">
                <tree string="OHS Evaluation">
                    <field name="code" />
                    <field name="template_id" />
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="date" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="ohs_evaluation_action" model="ir.actions.act_window">
            <field name="name">OHS Evaluation</field>
            <field name="res_model">ohs.evaluation</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="ohs_evaluation_menu"
            name="OHS Evaluation"
            action="ohs_evaluation_action"
            parent="ohs_evaluation.ohs_evaluation_root_menu"
            sequence="10"
        />
    
    </data>

</odoo>
