<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="account_efaktur_view_form" model="ir.ui.view">
            <field name="name">account.efaktur.view.form</field>
            <field name="model">account.efaktur</field>
            <field name="arch" type="xml">
                <form string="E-Faktur">
                    <sheet>
                        <group>
                            <group colspan="4">
                            <group>
                                <field name="year"/>
                                <field name="name" placeholder="xxx.xx.xxxxxxxx"/>
                            </group>
                            <group>
                                <field name="is_used"/>
                            </group>
                        </group>

                        <notebook colspan="4">
                            <page string="Invoices">
                                <field name="invoice_ids">
                                    <tree string="Invoices">
                                        <field name="name"/>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="invoice_date"/>
                                        <field name="amount_untaxed"/>
                                        <field name="amount_tax"/>
                                        <field name="amount_total"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_efaktur_view_tree" model="ir.ui.view">
            <field name="name">account.efaktur.view.tree</field>
            <field name="model">account.efaktur</field>
            <field name="arch" type="xml">
                <tree string="E-Faktur">
                    <field name="year" />
                    <field name="name" />
                    <field name="is_used" />
                </tree>
            </field>
        </record>

        <record id="account_efaktur_view_search" model="ir.ui.view">
            <field name="name">account.efaktur.search</field>
            <field name="model">account.efaktur</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="E-Faktur">
                    <field name="name" select="True"/>
                    <field name="year" select="True"/>
                    <group expand="0" string="Group By">
                        <filter string="Year" icon="terp-camera_test" name="year" context="{'group_by':'year'}"/>
                        <filter string="Is Used" icon="terp-camera_test" name="is_used" context="{'group_by':'is_used'}"/>
                    </group>

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="account_efaktur_action">
            <field name="name">Nomor E-Faktur</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.efaktur</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="account_efaktur_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="account_efaktur_action_form">
            <field name="act_window_id" ref="account_efaktur_action"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_efaktur_view_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="account_efaktur_action_tree">
            <field name="act_window_id" ref="account_efaktur_action"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_efaktur_view_tree"/>
        </record>

        <menuitem 
            id="efaktur_root_menu"
            sequence="10"
            name="E-Faktur"
            parent="account.menu_finance"
        />

        <menuitem 
            id="account_efaktur_menu"
            parent="account_efaktur.efaktur_root_menu"
            sequence="10"
            name="Serial Number Faktur"
            action="account_efaktur_action"
        />

        <menuitem
            id="export_efaktur_menu"
            name="Export Faktur"
            parent="account_efaktur.efaktur_root_menu"
            sequence="10"
        />


    
    </data>

</odoo>
