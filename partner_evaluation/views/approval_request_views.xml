<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="approval_request_view_form_inherit_purchase_request" model="ir.ui.view">
            <field name="name">approval.request.view.form.inherit</field>
            <field name="model">approval.request</field>
            <field name="inherit_id" ref="approvals.approval_request_view_form"/>
            <field name="arch" type="xml">
                <field name='category_id' position="after">
                    <field name="has_evaluation" invisible="1" />
                    <field name="evaluation_id" attrs="{'readonly': [('request_status', '!=', 'new')],'invisible': [('has_evaluation', '=', 'no')], 'required': [('has_evaluation', '=', 'required')]}" />
                    
                    <field name="has_evaluation_template" invisible="1" />
                    <field name="template_id" attrs="{'readonly': [('request_status', '!=', 'new')],'invisible': [('has_evaluation_template', '=', 'no')], 'required': [('has_evaluation_template', '=', 'required')]}" />
                </field>
            </field>
        </record>
    
    </data>

</odoo>
