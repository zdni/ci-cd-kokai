<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_partner_form_inherit_evaluation" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet" position="before">
                    <header>
                        <button string="Evaluation" name="generate_evaluation_wizard" type="object" class="oe_highlight"/>
                        <field name="evaluation" widget="statusbar" />
                    </header>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_show_partner_evaluation" type="object" class="oe_stat_button" icon="fa-certificate">
                        <field name="evaluation_count" string="" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
