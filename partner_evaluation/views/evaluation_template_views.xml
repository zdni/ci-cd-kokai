<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="evaluation_template_view_form" model="ir.ui.view">
            <field name="name">evaluation.template.view.form</field>
            <field name="model">evaluation.template</field>
            <field name="arch" type="xml">
                <form string="Template">
                    <header>
                        <field name="state" widget='statusbar' />
                    </header>
                    <sheet>
                        <div>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <field name="code" />
                            <field name="effective_date" />
                        </group>
                        <notebook>
                            <page name="question_line" string="Question">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="template_id" invisible="1" />
                                        <field name="category_id" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="evaluation_template_view_tree" model="ir.ui.view">
            <field name="name">evaluation.template.view.tree</field>
            <field name="model">evaluation.template</field>
            <field name="arch" type="xml">
                <tree string="Template">
                    <field name="name" />
                    <field name="code" />
                    <field name="effective_date" />
                </tree>
            </field>
        </record>
    
        <record id="evaluation_template_action" model="ir.actions.act_window">
            <field name="name">Template</field>
            <field name="res_model">evaluation.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
            id="evaluation_template_menu"
            name="Template"
            action="evaluation_template_action"
            sequence="10"
            parent="partner_evaluation.evaluation_menu"
        />

    </data>

</odoo>
