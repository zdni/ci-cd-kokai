<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="generate_evaluation_wizard_view_form" model="ir.ui.view">
            <field name="name">generate.evaluation.wizard.view.form</field>
            <field name="model">generate.evaluation.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Evaluation">
                    <sheet>
                        <group>
                            <field name="template_id" />
                            <field name="partner_id" />
                            <field name="user_ids" widget="many2many_tags" />
                        </group>
                    </sheet>
                    <footer>
                        <button string="Generate" name="button_process" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="generate_evaluation_wizard_action" model="ir.actions.act_window">
            <field name="name">Generate Evaluation</field>
            <field name="res_model">generate.evaluation.wizard</field>
            <field name="view_mode">form</field>
        </record>
    
    </data>

</odoo>
