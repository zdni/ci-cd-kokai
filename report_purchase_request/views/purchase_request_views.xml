<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_purchase_request_form_inherit_report" model="ir.ui.view">
            <field name="name">purchase.request.view.form.inherit</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Print PDF" name="action_print_pdf" type="object" states="approved,in_progress,done"/>
                    <button string="Print py3o" name="action_print_py3o" type="object" states="approved,in_progress,done"/>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
