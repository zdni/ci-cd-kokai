<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_department_form_inherit_maintenance" model="ir.ui.view">
            <field name="name">hr.department.view.form.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_show_maintenance_request" type="object" class="oe_stat_button" icon="fa-life-ring">
                        <field name="maintenance_request_count" string="My Request" widget="statinfo"/>
                    </button>
                    <button name="action_show_maintenance_task" type="object" class="oe_stat_button" icon="fa-bullseye">
                        <field name="maintenance_task_count" string="My Task" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
